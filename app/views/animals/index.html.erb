<div class="container">
  <!-- <div class="sticky"> -->
  <div>
    <div
      id="map"
      style="width: 100%;
      height: 300px; background-color: grey"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    <h3 class="text-center">Available Animals</h3>
  </div>

  <div class="cards">
    <% @animals.each do |animal| %>
      <%= link_to animal_path(animal) do %>
        <div class="card-trip index-animal-card"
            data-aos="fade-up"
            data-aos-offset="-200"
            data-aos-delay="50"
            data-aos-duration="1000"
            data-aos-easing="ease-in-out"
            data-aos-once="false"
            data-aos-anchor-placement="top-center">
          <img src="<%= cl_image_path animal.photo  %>">
          <div class="card-trip-infos">
            <div>
              <h2><%= animal.name %></h2>
              <p> <%= animal.species %></p>
            </div>
            <h2 class="card-trip-pricing"><%= animal.age %> yrs</h2>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>


</div>

