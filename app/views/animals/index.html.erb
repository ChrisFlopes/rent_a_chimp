<div class="container">

  <div class="add-animal-btn">
    <%= link_to "Add new", new_animal_path, class: "btn btn-flat" %>
  </div>

<div class="container">
  <div class="cards">
    <% @animals.each do |animal| %>
      <%= link_to animal_path(animal) do %>
        <div class="card-trip">
          <img src="<%= cl_image_path animal.photo  %>">
          <div class="card-trip-infos">
            <div>
              <h2><%= animal.name %></h2>
              <p> <%= animal.species %></p>
            </div>
            <h2 class="card-trip-pricing"><%= animal.age %> yrs</h2>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div
  id="map"
  style="width: 100%;
  height: 600px; background-color: grey"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>

</div>

