<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://img.thedailybeast.com/image/upload/c_crop,d_placeholder_euli9k,h_1439,w_2560,x_0,y_0/dpr_2.0/c_limit,w_740/fl_lossy,q_auto/v1492182113/articles/2015/04/27/can-you-take-a-chimp-to-court/150426-spevack-animal-rights-tease_pm6qo6);">
</div>

<%#= cl_image_tag @animal.photo, height: 300, width: 400, crop: :fill %>

<div class="container">
  <h1>Name: <%= @animal.name %></h1>
  <p>Animal: <%= @animal.species %></p>
  <p>Age: <%= @animal.age %></p>
</div>

<div class="container">
  <%= link_to "< Back to all animals", animals_path, class: "btn btn-flat" %>
  <%= link_to "Rent #{@animal.name}", new_animal_booking_path(@animal), class: "btn btn-flat" %>

  <% if policy(@animal).edit? %>
    <%= link_to "Edit", edit_animal_path(@animal), class: "btn btn-flat" %>
  <% end %>

  <% if policy(@animal).delete? %>
    <%= link_to "Delete", animal_path(@animal), method: :delete, data: {confirm: "Are you sure you want to delete #{@animal.name}?" }, class: "btn btn-flat" %>
  <% end %>
</div>
