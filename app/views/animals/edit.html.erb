<h1>Edit <%= @animal.name %></h1>
<div class="container">
  <div class="card-product-edit">
  <div>
    <img src="<%= cl_image_path @animal.photo  %>">

  </div>

        <%= simple_form_for(@animal) do |f| %>
          <div>
            <%= f.input :name %>
          </div>

          <div>
            <%= f.input :species %>
          </div>

          <div>
            <%= f.input :age %>
          </div>

          <div>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
          </div>

          <div>
            <%= f.button :submit %>
          </div>
        <% end %>
    </div>
  </div>


