<div class="modal fade" id="modalBooking" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
     <div class="card-modal-container">
             <div class="card-modal-info">
              <div class="card-modal-texts">
                <h1>Book <%= animal.name %></h1>

              <div>
                <% if booking.errors.any? %>
                  <h3>ERROR</h3>
                  <ul>
                    <% booking.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                <% end %>

                <%= simple_form_for [animal, booking] do |f| %>
                <div>
                  <p>Start date <%= f.date_field :end_date, min: Date.today %></p>
                </div>
                <div>
                  <p>End date <%= f.date_field :start_date, min: Date.today %></p>
                </div>
                <%= f.submit "Book", class: "btn btn-flat", data: {confirm: "You just booked #{animal.name}?" } %>
                <% end %>
              </div>
              </div>
            </div>
            <div class="card-modal-img">
              <img src="<%= cl_image_path animal.photo  %>">
            </div>
          </div>
  </div><!-- /.modal-dialog -->
</div>
